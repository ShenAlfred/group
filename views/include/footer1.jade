.footer-top
    .main.clearfix
        #links.link.fl
            span Other links&nbsp;:&nbsp;
            each link, index in links
                if link.url == ""
                    if index != links.length-1
                        span #{link.name} &nbsp;| &nbsp;
                    else
                        span #{link.name}
                else
                    if index != links.length-1
                        a(target="_blank" href="#{link.url}") #{link.name} &nbsp;| &nbsp;
                    else
                        a(target="_blank" href="#{link.url}") #{link.name}
        .QR.fr
            img(src="images/Qg.png" alt="QR code")
            .er
                img(src="images/qrcode2.jpg" alt="QR code")